<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnePostActivity">

    <TextView
        android:id="@+id/tv_one_post_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:fontFamily="@font/segoe_ui_bold"
        android:padding="15dp"
        android:text="Post"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/tv_one_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_one_post_header"
        android:fontFamily="@font/segoe_ui_bold"
        android:padding="15dp"
        android:layout_marginStart="5dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_one_post_createdAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui"
        android:padding="5dp"
        android:layout_marginStart="15dp"
        android:text="Title"
        android:layout_below="@+id/tv_one_post_title"
        android:textColor="@color/blue_night"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_one_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui"
        android:padding="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:text="TitleTitle"
        android:layout_below="@+id/tv_one_post_createdAt"
        android:textColor="@color/black"
        android:textSize="16dp" />

</RelativeLayout>